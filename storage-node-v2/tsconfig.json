{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "outDir": "./bin",
    "rootDir": "src",
    "strict": true,
    "types" : [ "node" ],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
